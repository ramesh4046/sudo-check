# -*- mode: conf -*-
# sudoers files - managed with chef

root ALL = (ALL) ALL
bb ALL = (root) NOPASSWD: /sbin/tw_cli, /opt/storcli/storcli, /usr/bin/qshape.pl, /usr/local/meetup/tools/jython, /usr/sbin/ipmitool, /usr/sbin/pmta
<% if @queue -%>
bb ALL = (rabbitmq) NOPASSWD: /usr/local/rabbitmq-server/sbin/rabbitmqctl
<% end -%>

cacti ALL = (root) NOPASSWD: /usr/local/ipvsadm/ipvsadm

<% if @dns -%>
%tech ALL = (root) NOPASSWD: /usr/sbin/rndc, /etc/init.d/named
<% end -%>
<% if @jobs -%>
%tech ALL = (root) NOPASSWD: /bin/su
<% end -%>

%tech ALL = (ALL) NOPASSWD: /bin/su - meetcvs
%hadoop ALL = (ALL) NOPASSWD: /bin/su - hadoop

